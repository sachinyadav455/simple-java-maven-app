pipeline {
    agent any

    tools {
        maven 'Maven'   // name configured in Jenkins
        jdk 'JDK'       // name configured in Jenkins
    }

    environment {
        TOMCAT_URL = 'http://localhost:8081'
        DEPLOY_PATH = 'manager/text/deploy?path=/myapp&update=true'
    }

    stages {
        stage('Checkout') {
            steps {
                // Jenkins automatically clones your repo
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building Maven project...'
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                echo 'Deploying WAR to Tomcat...'
                withCredentials([usernamePassword(credentialsId: 'tomcat-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    bat """
                    curl -u %USER%:%PASS% -T target\\myapp.war "%TOMCAT_URL%/%DEPLOY_PATH%"
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and deployment successful!'
        }
        failure {
            echo '❌ Build or deployment failed!'
        }
    }
}
